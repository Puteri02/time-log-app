// change 2
{/* Input for task */}
<div class="grid">
  <div class="col-3 text-left">
    <div >
      <div style={{marginLeft:'11em', fontFamily: 'serif'}}>
        <label>Task Name 🔎</label>
      </div>
      <div style={{marginLeft:'11em', padding:'0.5em'}}>
        <input
          class="w-12rem h-2rem"
          style={{backgroundColor: '#EBD3F8'}}
          type="text"
          placeholder="Task ..."
          value={task}
          onChange={(e) => setTask(e.target.value)} // Update task state on change
          required
        />
      </div>
    </div>
  </div>
  {/* Input for Start Time */}
  <div class="col-3 text-left">
    <div style={{marginLeft:'9em', fontFamily: 'serif'}}>
      <label>Start Time ⏳</label>
    </div>
    <div style={{marginLeft:'9em', padding:'0.5em'}}>
      <input
        class=" w-8rem h-2rem"
        style={{backgroundColor: '#FFF6EA'}}
        type="time"
        value={startTime}
        onChange={(e) => setStartTime(e.target.value)} // Update task state on change
        required
      />
    </div>
  </div>
  {/* Input for End Time */}
    <div class="col-3 text-left">
      <div style={{marginLeft:'3em', fontFamily: 'serif'}}>
        <label>End Time ⌛</label>
      </div>
      <div style={{marginLeft:'3em', padding:'0.5em'}}>
        <input
          class="w-8rem h-2rem"
          style={{backgroundColor: '#FFF6EA'}}
          type="time"
          value={endTime}
          onChange={(e) => setEndTime(e.target.value)} // Update task state on change
          required
        />
      </div>
    </div>
  {/* Input for Date */}
    <div class="col-3 text-left">
      <div style={{ marginLeft: '1em', fontFamily: 'serif'}}>
        <label>Date 📅</label>
      </div>
      <div style={{ marginLeft: '1em', padding: '0.5em' }}>
        <input
          class="w-10rem h-2rem"
          style={{ backgroundColor: '#CAF4FF' }}
          type="date"
          value={date}
          onChange={(e) => setDate(e.target.value)} // Update task state on change
          required
        />
      </div>
    </div>
</div>


